<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (could be modified as needed) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for calculator buttons -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@android:color/holo_blue_light</item> <!-- Optional: set a custom background -->
        <item name="android:textColor">#FFFFFF</item> <!-- Optional: set the text color -->
    </style>
</resources>